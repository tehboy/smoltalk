{
  "name": "Rust Wasm Runtime Dev",
  "image": "mcr.microsoft.com/devcontainers/rust:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml"
      ]
    }
  },
  // Install wasm stuff
  "postCreateCommand": "rustup target add wasm32-wasip1 && curl https://wasmtime.dev/install.sh -sSf | bash && cargo install wasm-pack",
  "forwardPorts": [
    3000
  ],
  "portsAttributes": {
    "3000": {
      "label": "Web Server",
      "onAutoForward": "openBrowser"
    }
  }
}